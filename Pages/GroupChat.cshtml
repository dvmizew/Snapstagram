@page "{groupId:int}"
@model GroupChatModel
@{
    ViewData["Title"] = "Group Chat";
}
<h2>Group Chat</h2>
<div id="groupChatMessages">
    <!-- TODO: Group chat messages will appear here -->
    <p>Group chat coming soon!</p>
</div>
<form id="groupChatForm" method="post">
    <input type="hidden" asp-for="GroupId" />
    <div class="input-group mt-3">
        <input asp-for="MessageText" class="form-control" placeholder="Type a message..." />
        <button type="submit" class="btn btn-primary">Send</button>
    </div>
</form>
