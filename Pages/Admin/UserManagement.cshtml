@page
@model Snapstagram.Pages.Admin.UserManagementModel
@{
    ViewData["Title"] = "User Management";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1>User Management</h1>
    <p class="mb-4">Manage user roles and permissions.</p>

    @if (Model.StatusMessage != null)
    {
        <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger")" role="alert">
            @Model.StatusMessage
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Users</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Current Roles</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.FirstName @user.LastName</td>
                                <td>@user.Email</td>
                                <td>@string.Join(", ", user.Roles)</td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <form method="post" asp-page-handler="MakeModerator" asp-route-userId="@user.Id">
                                            <button type="submit" class="btn btn-warning btn-sm" 
                                                    disabled="@(user.Roles.Contains("Moderator") || user.Roles.Contains("Administrator"))">
                                                Make Moderator
                                            </button>
                                        </form>
                                        <form method="post" asp-page-handler="MakeAdmin" asp-route-userId="@user.Id">
                                            <button type="submit" class="btn btn-danger btn-sm"
                                                    disabled="@(user.Roles.Contains("Administrator"))">
                                                Make Admin
                                            </button>
                                        </form>
                                        <form method="post" asp-page-handler="RemoveModerator" asp-route-userId="@user.Id">
                                            <button type="submit" class="btn btn-outline-warning btn-sm"
                                                    disabled="@(!user.Roles.Contains("Moderator"))">
                                                Remove Moderator
                                            </button>
                                        </form>
                                        <form method="post" asp-page-handler="RemoveAdmin" asp-route-userId="@user.Id">
                                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                                    disabled="@(!user.Roles.Contains("Administrator"))">
                                                Remove Admin
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
