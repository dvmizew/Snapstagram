@page
@model ForgotPasswordModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Forgot Password";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-icon">
                <i class="fas fa-lock"></i>
            </div>
            <h2>Trouble logging in?</h2>
            <p class="auth-subtitle">Enter your email and we'll send you a link to get back into your account.</p>
        </div>

        @if (Model.IsSuccess)
        {
            <div class="alert alert-success">
                @Model.Message
            </div>
            <div class="auth-links">
                <a asp-page="Login" class="btn btn-primary auth-btn">Back to Login</a>
            </div>
        }
        else
        {
            <form method="post" class="auth-form">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Email" autocomplete="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary auth-btn">Send Login Link</button>
            </form>

            <div class="auth-divider">
                <span>OR</span>
            </div>

            <div class="auth-links">
                <a asp-page="Register">Create New Account</a>
            </div>
        }
    </div>

    <div class="auth-switch">
        <p><a asp-page="Login">Back to Login</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
