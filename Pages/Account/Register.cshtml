@page
@model RegisterModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Sign up";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-logo">Snapstagram</h1>
            <p class="auth-subtitle">Sign up to see photos and videos from your friends.</p>
        </div>

        <form method="post" class="auth-form">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @Model.ErrorMessage
                </div>
            }

            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="FullName" class="form-control" placeholder="Full Name" autocomplete="name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Username" class="form-control" placeholder="Username" autocomplete="username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary auth-btn">Sign up</button>
        </form>

        <div class="auth-divider">
            <span>OR</span>
        </div>

        <div class="auth-footer">
            <p>By signing up, you agree to our Terms, Data Policy and Cookies Policy.</p>
        </div>
    </div>

    <div class="auth-switch">
        <p>Have an account? <a asp-page="Login">Log in</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
