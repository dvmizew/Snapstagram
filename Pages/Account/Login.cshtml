@page
@model LoginModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Log in";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-logo">Snapstagram</h1>
        </div>

        <form method="post" class="auth-form">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @Model.ErrorMessage
                </div>
            }

            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Phone number, username, or email" autocomplete="username" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" autocomplete="current-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary auth-btn">Log in</button>

            <div class="form-check remember-me">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                <label asp-for="RememberMe" class="form-check-label">Remember me</label>
            </div>
        </form>

        <div class="auth-divider">
            <span>OR</span>
        </div>

        <div class="auth-links">
            <a asp-page="ForgotPassword" class="forgot-password">Forgot password?</a>
        </div>
    </div>

    <div class="auth-switch">
        <p>Don't have an account? <a asp-page="Register">Sign up</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}