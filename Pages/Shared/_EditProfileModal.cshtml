@* Edit Profile Modal Template *@
<form method="post" asp-page-handler="UpdateProfile" class="edit-profile-form">
    <div class="form-group">
        <label for="editDisplayName" class="form-label">Display Name</label>
        <input type="text" 
               class="form-control" 
               id="editDisplayName" 
               name="DisplayName" 
               value="@Model.DisplayName"
               maxlength="50">
    </div>
    
    <div class="form-group">
        <label for="editBio" class="form-label">Bio</label>
        <textarea class="form-control" 
                  id="editBio" 
                  name="Bio" 
                  rows="3" 
                  maxlength="150" 
                  placeholder="Tell us about yourself...">@Model.Bio</textarea>
        <small class="form-text text-muted">
            <span id="bioCharCount">@(Model.Bio?.Length ?? 0)</span>/150 characters
        </small>
    </div>
    
    <div class="form-group">
        <div class="form-check">
            <input type="checkbox" 
                   class="form-check-input" 
                   id="editIsPrivate" 
                   name="IsPrivate" 
                   @(Model.IsPrivate ? "checked" : "")>
            <label class="form-check-label" for="editIsPrivate">
                Private Account
            </label>
            <small class="form-text text-muted d-block">
                When your account is private, only people you approve can see your photos and videos.
            </small>
        </div>
    </div>
</form>

<script>
    // Bio character counter
    document.getElementById('editBio').addEventListener('input', function() {
        const charCount = this.value.length;
        document.getElementById('bioCharCount').textContent = charCount;
        
        // Visual feedback for character limit
        const counter = document.getElementById('bioCharCount');
        if (charCount > 140) {
            counter.style.color = '#dc3545';
        } else if (charCount > 120) {
            counter.style.color = '#ffc107';
        } else {
            counter.style.color = '#6c757d';
        }
    });
</script>
