@page
@model LoginModel
@{
    ViewData["Title"] = "Log in to Snapstagram";
    Layout = "/Pages/Shared/_AuthLayout.cshtml";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-logo">
                <i class="fas fa-camera text-gradient"></i>
                <span class="brand-text">Snapstagram</span>
            </h1>
        </div>

        <form id="account" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
            
            <div class="form-group">
                <input asp-for="Input.Email" class="auth-input" autocomplete="username" aria-required="true" placeholder="Phone number, username, or email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input asp-for="Input.Password" class="auth-input" autocomplete="current-password" aria-required="true" placeholder="Password" type="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            
            <button id="login-submit" type="submit" class="auth-button">Log In</button>
            
            <div class="auth-divider">
                <span>OR</span>
            </div>
            
            <div class="checkbox-container">
                <label asp-for="Input.RememberMe" class="checkbox-label">
                    <input class="checkbox-input" asp-for="Input.RememberMe" />
                    <span class="checkmark"></span>
                    Remember me
                </label>
            </div>
        </form>

        <div class="auth-links">
            <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
        </div>
    </div>    <div class="auth-switch">
        <p>Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a></p>
    </div>
</div>

